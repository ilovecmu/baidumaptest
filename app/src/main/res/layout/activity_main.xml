<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".MainActivity" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/main_tab">

        <RadioButton
            android:id="@+id/find_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="发现"
            android:textSize="12sp"
            android:checked="true"
            android:textColor="@drawable/selector_main_tab_text"
            android:drawableTop="@drawable/selector_main_tab_find"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal|bottom"
            android:layout_weight="1"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/control_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center_horizontal|bottom"
            android:text="车车"
            android:textColor="@drawable/selector_main_tab_text"
            android:drawableTop="@drawable/selector_main_tab_control"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/me_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="我的"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:textColor="@drawable/selector_main_tab_text"
            android:drawableTop="@drawable/selector_main_tab_aboutme"
            android:button="@null"/>
    </RadioGroup>
</LinearLayout>
