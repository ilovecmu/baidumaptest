<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.gangzhang.car.CarControlFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/alarm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/find_note_on" />
        <Button
            android:id="@+id/start_car"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_below="@id/alarm"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/start"/>
        <Button
            android:id="@+id/find_car"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toLeftOf="@id/start_car"
            android:layout_centerVertical="true"
            android:background="@drawable/agc"
            android:layout_alignBaseline="@id/start_car"
            android:layout_marginRight="15dp"/>
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/set_alarm_car"
            android:layout_toRightOf="@id/start_car"
            android:layout_centerVertical="true"
            android:background="@drawable/a8z"
            android:layout_alignBaseline="@id/start_car"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/join_car"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/start_car"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_car_join"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

</FrameLayout>
