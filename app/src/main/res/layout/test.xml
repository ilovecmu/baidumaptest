<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    tools:context="com.example.gangzhang.car.CarControlFragment">

    <RelativeLayout
        android:layout_marginTop="300dp"
        android:layout_width="match_parent"
        android:id="@+id/test1"
        android:layout_height="wrap_content">



        <Button
            android:id="@+id/alarm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:text="111"
            android:background="@drawable/nova_searchpage_background_big"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp" />

        <Button
            android:id="@+id/find_car"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="111"
            android:background="@drawable/nova_searchpage_background_big"

            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/test1"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/set_alarm_car"
            android:background="@drawable/nova_searchpage_background_big"

            android:text="111"

            android:layout_marginStart="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/join_car"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="111"
            android:background="@drawable/nova_searchpage_background_big"

            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/start_car"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/start"/>

</RelativeLayout>
